<%= form_for(job) do |f| %>
  <% if job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :company %>
    <%= f.text_field :company %>
  </div>

  <div class="field">
    <%= f.label :URL %>
    <%= f.text_field :URL %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <% if @positions_arr %>
      <%= f.select :title, @positions_arr %>
    <% else %>
      <%= f.text_field :title %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :date_applied %>
    <%= f.date_field :date_applied %>
  </div>

  <div class="field">
    <%= f.label :resume_sent %>
    <%= f.check_box :resume_sent %>
  </div>

  <div class="field">
    <%= f.label :rejected %>
    <%= f.check_box :rejected %>
  </div>

  <div class="field">
    <%= f.label :cover_letter_sent %>
    <%= f.check_box :cover_letter_sent %>
  </div>

  <label>Cover Letter: </label>
  <div class="field">
    <%= f.text_area :cover_letter, cols: 80, rows:20 %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
